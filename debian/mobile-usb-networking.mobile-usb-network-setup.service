[Unit]
Description=Setup USB networking
Requires=NetworkManager.service
After=NetworkManager.service
ConditionPathExists=!/etc/NetworkManager/system-connections/RNDIS.nmconnection
ConditionPathExists=!/etc/NetworkManager/system-connections/ECM.nmconnection

[Service]
Type=oneshot
ExecStart=/usr/sbin/mobile-usb-network-setup

[Install]
WantedBy=multi-user.target
